model Blocked {
  blockedUser User @relation("BlockedBy", fields: [blockedUserId], references: [id])
  blockedUserId Int
  blockingUser User @relation("Blocked", fields: [blockingUserId], references: [id])
  blockingUserId Int

  @@unique([blockingUserId, blockedUserId])
}